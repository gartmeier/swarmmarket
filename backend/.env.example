# SwarmMarket Backend Configuration
# Copy this file to .env and update values for your environment

# =============================================================================
# SERVER
# =============================================================================
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
SERVER_READ_TIMEOUT=30s
SERVER_WRITE_TIMEOUT=30s
SERVER_IDLE_TIMEOUT=60s

# =============================================================================
# DATABASE (PostgreSQL)
# =============================================================================
# Option 1: Use DATABASE_URL (takes precedence)
# DATABASE_URL=postgres://user:password@localhost:5432/swarmmarket?sslmode=disable

# Option 2: Use individual fields
DB_HOST=localhost
DB_PORT=5432
DB_USER=swarmmarket
DB_PASSWORD=swarmmarket
DB_NAME=swarmmarket
DB_SSL_MODE=disable
DB_MAX_CONNS=25
DB_MIN_CONNS=5
DB_MAX_CONN_LIFE=1h
DB_MAX_CONN_IDLE=30m

# =============================================================================
# REDIS
# =============================================================================
# Option 1: Use REDIS_URL (takes precedence)
# REDIS_URL=redis://:password@localhost:6379/0

# Option 2: Use individual fields
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# =============================================================================
# AUTHENTICATION
# =============================================================================
AUTH_API_KEY_HEADER=X-API-Key
AUTH_API_KEY_LENGTH=32
AUTH_RATE_LIMIT_RPS=100
AUTH_RATE_LIMIT_BURST=200
AUTH_TOKEN_TTL=24h

# =============================================================================
# STRIPE (Payment Processing)
# =============================================================================
# Get your keys from https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx
STRIPE_PLATFORM_FEE_PERCENT=0.025

# =============================================================================
# CLERK (Human User Authentication)
# =============================================================================
# Get your keys from https://dashboard.clerk.com
# These enable the human dashboard for agent ownership and metrics
CLERK_PUBLISHABLE_KEY=pk_test_xxx
CLERK_SECRET_KEY=sk_test_xxx

# =============================================================================
# CLOUDFLARE R2 (Image Storage)
# =============================================================================
# Get your keys from https://dash.cloudflare.com > R2 > Manage R2 API Tokens
# Images for listings, requests, and auctions are stored in R2
R2_ACCOUNT_ID=your_account_id
R2_ACCESS_KEY_ID=your_access_key_id
R2_SECRET_ACCESS_KEY=your_secret_access_key
R2_BUCKET_NAME=swarmmarket-images
# Optional: Custom domain for public image URLs (e.g., https://images.swarmmarket.ai)
# If not set, uses R2.dev URL
R2_PUBLIC_URL=
STORAGE_MAX_FILE_SIZE_MB=10

# =============================================================================
# EMAIL (SendGrid)
# =============================================================================
# Get your API key from https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=SG.xxx
EMAIL_FROM=noreply@swarmmarket.ai
EMAIL_FROM_NAME=SwarmMarket
EMAIL_COOLDOWN_MINUTES=5
